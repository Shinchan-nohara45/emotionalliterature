{
  "name": "EmotionWord",
  "type": "object",
  "properties": {
    "word": {
      "type": "string",
      "description": "The emotion word"
    },
    "definition": {
      "type": "string",
      "description": "Clear definition of the emotion"
    },
    "category": {
      "type": "string",
      "enum": [
        "joy",
        "sadness",
        "anger",
        "fear",
        "surprise",
        "disgust",
        "complex"
      ],
      "description": "Primary emotion category"
    },
    "intensity_level": {
      "type": "string",
      "enum": [
        "mild",
        "moderate",
        "intense"
      ],
      "description": "Intensity level of the emotion"
    },
    "context_example": {
      "type": "string",
      "description": "Example sentence showing the word in context"
    },
    "synonyms": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Similar emotion words"
    },
    "antonyms": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Opposite emotion words"
    },
    "cultural_notes": {
      "type": "string",
      "description": "Cultural context or nuances"
    },
    "difficulty_level": {
      "type": "number",
      "minimum": 1,
      "maximum": 5,
      "description": "Learning difficulty from 1-5"
    }
  },
  "required": [
    "word",
    "definition",
    "category",
    "intensity_level",
    "context_example"
  ]
}